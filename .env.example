# ===========================================
# Configuration AirbnBook
# ===========================================

# Mode debug (True/False)
DEBUG=False

# ===========================================
# Configuration API
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
# Décommenter pour activer l'authentification API
# API_KEY=your-secret-api-key-here

# ===========================================
# Synchronisation
# ===========================================
# Intervalle en minutes entre les syncs
SYNC_INTERVAL=30
# Timeout des requêtes HTTP en secondes
REQUEST_TIMEOUT=30
# Nombre de tentatives en cas d'échec
MAX_RETRIES=3

# ===========================================
# Chemins
# ===========================================
DATA_DIR=data
LOGS_DIR=logs
LOG_LEVEL=INFO

# ===========================================
# Calendriers par défaut
# (chargés automatiquement au 1er démarrage)
# ===========================================
AIRBNB_ICS=
BOOKING_ICS=

# Autres sources (décommenter si besoin)
# VRBO_ICS=
# ABRITEL_ICS=

# ===========================================
# Export (optionnel)
# ===========================================
OUTFILE=/srv/data/unique-export.ics
OUTFILE_FR=/srv/data/unique-export-fr.ics

